{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compile solution",
            "type": "shell",
            "command": "mvn -B compile",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/sudoku-solver/solution"
            },
        },
        {
            "label": "verify solution",
            "type": "shell",
            "command": "mvn -B verify",
            "group": "build",
            "options": {
                "cwd": "${workspaceFolder}/sudoku-solver/solution"
            },
        },
        {
            "label": "test solution",
            "type": "shell",
            "command": "mvn -B test",
            "group": "test",
            "options": {
                "cwd": "${workspaceFolder}/sudoku-solver/solution"
            },
        },
        {
            "type": "shell",
            "label": "run solution",
            "command": "mvn package exec:java",
            "options": {
                "cwd": "${workspaceFolder}/sudoku-solver/solution"
            },
            "group": "build"
        }
    ]
}